<h1>Fire Nation</h1>
<h4>Total Number of People Who Live in the Fire Nation: <%= @facade.count %></h4>
<table style="border:1px solid black;" id="m_table">
    <tr>
      <th style="border: 1px solid black">List of Allies</th>
      <th style="border: 1px solid black">List of Enemies</th>
      <th style="border: 1px solid black">List of Affiliations</th>
      <th style="border: 1px solid black">Name</th>
      <th style="border: 1px solid black">Photo if Possible</th>
    </tr>
    <% @facade.first(25).each do |facade| %>
    <tr>
      <td style="border: 1px solid black"><%= facade.allies %></td>
      <td style="border: 1px solid black"><%= facade.enemies %></td>
      <td style="border: 1px solid black"><%= facade.affiliation %></td>
      <td style="border: 1px solid black"><%= facade.name %></td>
        <% if !facade.photo.nil? %>
        <td style="border: 1px solid black"><%=image_tag("#{facade.photo}") %></td>
        <% end %>
      <% end %>
    </tr>
  </table>  